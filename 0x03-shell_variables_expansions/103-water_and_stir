#!/bin/bash
# Convert WATER and STIR to decimal
water_dec=$(echo "$WATER" | tr 'a-z' '0-9' | tr -d '[:punct:]')
stir_dec=$(echo "$STIR" | tr 'a-z' '0-9' | tr -d '[:punct:]')

# Add the decimal values
bestchol_dec=$((water_dec + stir_dec))

# Convert the result to base bestchol
bestchol=$(echo "obase=bestchol; $bestchol_dec" | bc)

# Print the result
echo "$bestchol"
